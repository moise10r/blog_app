<div class="profile-container">
  <%= render partial: "user_card", locals: { user: @user } %>
  <div class="bio">
    <h5 class="bio-heading">Bio</h5>
    <p class="bio-text"><%= @user.bio %></p>
  </div>
  <ul class="post-list">
    <% @posts.each do |p| %>
      <li class="post-item">
        <%= link_to user_post_path(@user.id, p.id), class: "title-link" do %>
          <%= render partial: "posts/post_card", locals: { post: p } %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <div class="actions">
    <%= link_to "See all posts", user_posts_path(@user.id), class: "link btn" %>
  </div>
</div>

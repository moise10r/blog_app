    <% (1..3).each do |comment| %>
      <li class="comment__item">
        <span class="comment__item-user"><%= "User #{comment}" %>:  </span>
        <span class="comment__item-comment"><%= "Comment #{comment}" %> </span>
      </li>
    <% end %>
  </ul>
</div>

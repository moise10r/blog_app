      <h5 class="post-title"><%= "Post #{@post_id}" %> by <%= "User #{@user_id}" %></h5>
      <div class="post-likes-comments-counter">
        <span>Comments: 2</span>, <span>Likes: 2</span>
      </div>
    </div>

<div class="form-container">
  <%= form_with url: post_comment_create_path(post.id), scope: :data do |f| %>
    <div class="field">
      <%= f.text_area :text, size: "60x10", required: true, placeholder: "Write comment...", class: "text_area" %>
    </div>
    <%= f.submit "Comment", class: "btn" %>
  <% end %>
</div>